<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySpotify.Mob.MVVM.Views.Library"
             Title="LibraryView">
    <CollectionView
                    x:Name="CollectionMusicView"
                    ItemsSource="{Binding Musics}"
                    ItemTemplate="{StaticResource MusicsStyle}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedMusic}"
                    SelectionChangedCommand="{Binding OnCollectionMusicViewChanged}">
                  
  

    </CollectionView>
</ContentPage>