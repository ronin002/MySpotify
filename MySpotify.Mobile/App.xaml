<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MySpotify.Mobile.MVVM.Views"
             x:Class="MySpotify.Mobile">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell>
            <TabBar x:Name="MusicTabs">
                <Tab Title="Home" Icon="home.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Home}"/>
                </Tab>
                <Tab Title="Search" Icon="search.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Search}"/>
                </Tab>
                <Tab Title="Library" Icon="playlist2.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Library}"/>
                </Tab>

            </TabBar>
        </Shell>
    </Application.MainPage>

</Application>
